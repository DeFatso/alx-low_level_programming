CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(OBJ): %.o: %.c m.h
	$(CC) -c $< -o $@ -Wall -Werror -Wextra -pedantic

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME) -Wall -Werror -Wextra -pedantic

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all
